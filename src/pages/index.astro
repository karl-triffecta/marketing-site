---
import Layout from "../layouts/Layout.astro";
import FormCalendlyDemo from "../components/FormCalendlyDemo.astro";

import FadeIn from "../components/FadeIn.tsx";
import FeatureScroller from "../components/FeatureScroller.tsx";
import IconTriffecta from "../components/icon/IconTriffecta.tsx";
import LinkButtonRequestDemo from "../components/LinkButtonRequestDemo.tsx";

import PostList from "../components/PostList.astro";

import { getImage, Picture } from "astro:assets";
import ImgHeroTop from "../assets/hero-top.png";
const optimizedImgHeroTop = await getImage({
  src: ImgHeroTop,
  format: "webp",
});
import ImgHeroBottom from "../assets/hero-bottom.png";
import ImgMacbook from "../assets/mackbook.png";

import HeroBackgroundVideo from "../components/HeroBackgroundVideo.tsx";
import heroWebm from "../assets/hero-bg.webm";
import heroMp4 from "../assets/hero-bg.mp4";

const seo = {
  title: "Triffecta | Revolutionizing Retail Media at Scale",
  titleTemplate: "%s",
};
---

<Fragment slot="head">
  <link rel="preload" href={optimizedImgHeroTop.src} as="image" />
</Fragment>
<Layout seo={seo}>
  <section class="bg-secondary relative overflow-hidden py-18 text-white">
    <div class="relative z-10 container mx-auto">
      <FadeIn client:load delay={300} duration={3000}>
        <div class="relative z-20">
          <div class="inline-block rounded-lg bg-[rgba(38,50,56,0.75)] p-4">
            <h1
              class="text-4xl font-bold text-wrap text-clip sm:text-5xl md:text-6xl"
            >
              Revolutionising Retail Media
            </h1>
            <p
              class="text-accent-dark mt-4 inline-block text-4xl font-bold sm:text-5xl"
            >
              Simplified, Scalable, Smarter
            </p>
          </div>

          <div
            class="mt-6 mb-6 inline-block rounded-lg bg-[rgba(38,50,56,0.75)] p-4"
          >
            <p class="text-lg">
              Unlock the full potential of retail media with the only aggregator
              designed specifically for retailers.
            </p>
          </div>

          <div class="block">
            <LinkButtonRequestDemo free={true} />
          </div>
        </div>
        <div
          class="absolute top-[-50%] right-[-40%] z-10 lg:top-[-80%] lg:right-[-10%]"
        >
          <IconTriffecta
            size="1000px"
            strokeWidth="0.7"
            transform="rotate(212)"
          />
        </div>
      </FadeIn>
    </div>

    <Picture
      id="hero"
      src={ImgHeroTop}
      formats={["webp", "avif", "png"]}
      widths={[480, 768, 1280, 1920]}
      sizes="100vw"
      alt="A picture of a woman shopping for groceries"
      fetchpriority="high"
      loading="eager"
      class="absolute top-0 left-0 z-0 h-full w-full object-cover object-[70%_center] sm:object-center"
    />
    <HeroBackgroundVideo
      webmSrc={heroWebm}
      mp4Src={heroMp4}
      poster={optimizedImgHeroTop.src}
      className="absolute top-0 left-0 z-0 h-full w-full object-cover object-center opacity-0 transition-opacity duration-1200"
      delay={1200}
      client:load
    />
  </section>

  <section class="bg-triffecta-gradient p-1.25"></section>

  <FeatureScroller client:visible />

  <section class="overflow-hidden bg-white py-10">
    <div class="relative container mx-auto">
      <FadeIn client:load delay={300} duration={3000}>
        <div class="relative z-20">
          <section
            class="grid grid-cols-6 gap-4 sm:grid-cols-6 sm:gap-4 lg:grid-cols-12 lg:gap-8"
          >
            <div class="col-span-6 sm:col-span-3 lg:col-span-4 lg:p-6">
              <div class="relative flex h-full items-center justify-center">
                <Picture
                  id="macbook"
                  src={ImgMacbook}
                  formats={["webp", "avif", "png"]}
                  widths={[380, 760]}
                  sizes="(min-width: 1024px) 379px, 100vw"
                  alt="A picture of a laptop using the Triffeca platform"
                  loading="lazy"
                  class="relative lg:top-[2%] lg:scale-160"
                />
              </div>
            </div>
            <div class="col-span-6 sm:col-span-3 lg:col-span-8 lg:p-6">
              <h2 class="text-4xl font-bold">Why Triffecta?</h2>
              <ul class="mt-6 space-y-8">
                <li class="flex">
                  <span class="text-accent-dark mt-1 text-xl sm:mt-2.5">▼</span>
                  <p class="ml-2 text-lg">
                    <span class="font-bold">Built for Retail:</span> We understand
                    the nuances of retail media and have designed every feature with
                    your needs in mind.
                  </p>
                </li>
                <li class="flex">
                  <span class="text-accent-dark mt-1 text-xl sm:mt-2.5">▼</span>
                  <p class="ml-2 text-lg">
                    <span class="font-bold">Scalable Solutions:</span> Whether you’re
                    managing a single store or multiple brands, our platform adapts
                    to your growth.
                  </p>
                </li>
                <li class="flex">
                  <span class="text-accent-dark mt-1 text-xl sm:mt-2.5">▼</span>
                  <p class="ml-2 text-lg">
                    <span class="font-bold"
                      >Seamless Onboarding & Support:
                    </span>
                    Our dedicated customer success team is here to ensure you’re
                    up and running in no time.
                  </p>
                </li>
              </ul>
            </div>
          </section>
        </div>
        <div
          class="absolute top-[-60%] left-[-40%] z-10 lg:top-[-80%] lg:left-[5%]"
        >
          <IconTriffecta
            size="1400px"
            strokeWidth="0.4"
            transform="rotate(164)"
          />
        </div>
      </FadeIn>
    </div>
  </section>

  <section class="container mx-auto p-5">
    <!--Empty space character -->
    &nbsp;
  </section>
  <!--
  <section class="bg-triffecta-gradient p-1.25"></section>
  <section class="container mx-auto my-15">
    <div class="rounded-2xl bg-white p-6 py-8">
      <p class="text-lg">
        “Since partnering with Triffecta, we’ve seen a 40% increase in campaign
        efficiency across all our retail media channels.”
      </p>
      <div class="mt-12 flex items-center">
        <div class="bg-primary mr-5 h-11 w-11 rounded-full p-5"></div>
        <div class="flex flex-col">
          <span class="font-semibold">Retail Media Manager</span>
          <span class="text-text-light">National Grocery Chain</span>
        </div>
      </div>
    </div>
  </section>
   -->

  <section class="relative overflow-hidden bg-white py-18 text-white">
    <div class="relative z-10 container mx-auto">
      <FadeIn client:load delay={300} duration={3000}>
        <div class="relative z-20">
          <div class="inline-block rounded-lg bg-[rgba(38,50,56,0.75)] p-4">
            <h2 class="text-6xl font-bold">
              Ready to <span class="text-accent-dark">Simplify</span>, <span
                class="text-accent-dark">Scale</span
              >, and <span class="text-accent-dark">Succeed</span>?
            </h2>
          </div>

          <div
            class="mt-6 mb-6 inline-block rounded-lg bg-[rgba(38,50,56,0.75)] p-4"
          >
            <p class="text-lg">
              Discover how Triffecta can revolutionize your retail media
              campaigns.
            </p>
          </div>

          <div class="block">
            <LinkButtonRequestDemo free={true} />
          </div>
        </div>
        <div
          class="absolute top-[-150%] left-[-130%] z-10 lg:top-[-350%] lg:left-[-8%]"
        >
          <IconTriffecta
            size="1400px"
            strokeWidth="0.4"
            transform="rotate(99)"
          />
        </div>
      </FadeIn>
    </div>

    <Picture
      id="hero"
      src={ImgHeroBottom}
      formats={["webp", "avif", "png"]}
      widths={[480, 768, 1280, 1920]}
      sizes="100vw"
      loading="lazy"
      alt="A picture of woman looking at products on shelves"
      class="absolute top-0 left-0 z-0 h-full w-full object-cover"
    />
  </section>

  <section class="bg-triffecta-gradient p-1.25"></section>

  <FormCalendlyDemo />

  <section class="relative overflow-hidden bg-white py-18">
    <div class="relative z-10 container mx-auto">
      <div
        class="grid grid-cols-6 gap-4 sm:grid-cols-6 sm:gap-4 lg:grid-cols-12 lg:gap-8"
      >
        <div class="col-span-4 p-0 sm:col-span-3 lg:col-span-4 lg:px-6">
          <h2 class="text-6xl leading-[3rem] font-bold">Latest</h2>
        </div>
        <ul
          class="col-span-8 mt-6 p-0 sm:col-span-3 lg:col-span-8 lg:mt-0 lg:px-6"
        >
          <PostList short={true} />
        </ul>
      </div>
    </div>
  </section>
</Layout>
