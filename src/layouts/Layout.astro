---
import "../styles/global.css";
import FormSubscribeNewsletter from "../components/FormSubscribeNewsletter.jsx";

// TODO: When using Prod switch
const base = "/marketing-site/";
//const base = "/";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- When not hosted on domain -->
    <base href={base} />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="generator" content={Astro.generator} />
    <title>Triffecta | Revolutionizing Retail Media</title>
    <meta
      name="description"
      content="Triffecta | Revolutionizing Retail Media"
    />

    <!--
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-C1LG8PF9LR"></script>
    TODO: SEO tags... <meta property="og:title" content="">
    -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" href={`${base}favicon.ico`} sizes="any" />
    <link rel="icon" href={`${base}favicon.svg`} type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/icon.png" />

    <meta name="theme-color" content="#fad89a" />
    <link rel="manifest" href="site.webmanifest" />
  </head>
  <body class="bg-background">
    <header class="bg-primary-dark p-4">
      <div
        class="container mx-auto px-20 lg:px-20 md:px-12 sm:px-8 flex flex-col sm:flex-row sm:justify-between items-center"
      >
        <a href="/" class="text-xl font-bold mb-4 sm:mb-0">Triffecta</a>
        <nav
          class="flex flex-col sm:flex-row sm:space-x-6 space-y-4 sm:space-y-0 items-center"
        >
          <a href="https://portal.triffecta.com/" class="hover:underline"
            >Login</a
          >
          <a
            href="#demo-signup"
            class="bg-secondary text-primary px-4 py-2 rounded-lg pl-15 pr-15"
            >Request a Demo</a
          >
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-white">
      <section class="p-1.25 bg-primary-dark"></section>

      <div
        class="container mx-auto lg:px-20 md:px-12 sm:px-8 flex flex-col sm:flex-row sm:justify-between sm:items-stretch py-6"
      >
        <div class="flex-1"><FormSubscribeNewsletter client:visible /></div>
        <div class="flex flex-col justify-between items-end flex-1 pl-10">
          <div>Triffecta</div>
          <div class="flex flex-col items-end space-y-2">
            <div>Social Links</div>
            <p>© 2025 Triffecta. All rights reserved.</p>
            <a href="/privacy" class="hover:underline"
              >Privacy Policy & Cookie Policy</a
            >
          </div>
        </div>
      </div>
    </footer>

