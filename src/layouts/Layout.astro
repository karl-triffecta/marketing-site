    <meta name="theme-color" content="#fad89a">
    <link rel="manifest" href="site.webmanifest">
	</head>
	<body>



		<header class="bg-primary p-4">
      <div class="container mx-auto px-20 lg:px-20 md:px-12 sm:px-8 flex flex-col sm:flex-row sm:justify-between items-center">
        <a href="/" class="text-xl font-bold mb-4 sm:mb-0">Triffecta Logo</a>
        <nav class="flex flex-col sm:flex-row sm:space-x-6 space-y-4 sm:space-y-0 items-center">
          <a href="https://portal.triffecta.com/" class="hover:underline">Login</a>
          <button class="bg-secondary text-primary px-4 py-2 rounded-lg">Request a Demo</button>
        </nav>
      </div>
    </header>

    <div class="container mx-auto px-20 lg:px-20 md:px-12 sm:px-8">
      <section class="grid grid-cols-6 sm:grid-cols-6 lg:grid-cols-12 gap-4 sm:gap-4 lg:gap-8">
        <!-- Hero section (spans full width) -->
        <div class="col-span-6 lg:col-span-12 bg-yellow-200 p-12 text-center">
          <h1 class="text-4xl font-bold">Hero Section</h1>
        </div>

        <!-- Features (3 columns on desktop, 2 on tablet, 1 on mobile) -->
        <div class="col-span-6 sm:col-span-3 lg:col-span-4 bg-gray-200 p-6">Feature 1</div>
        <div class="col-span-6 sm:col-span-3 lg:col-span-4 bg-gray-300 p-6">Feature 2</div>
        <div class="col-span-6 sm:col-span-3 lg:col-span-4 bg-gray-400 p-6">Feature 3</div>

        <!-- Call to Action -->
        <div class="col-span-6 lg:col-span-12 bg-yellow-400 p-12 text-center">
          <button class="bg-gray-900 text-white px-6 py-3 rounded-lg">Request a Demo</button>
        </div>
      </section>
    </div>


    <main class="container mx-auto p-6">
      <slot />
    </main>

